<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="Modulo">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Nome" type="xs:string"/>
        <xs:element ref="Contidos"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="Contidos">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="Bloque" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="Bloque">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Titulo" type="xs:string"/>
        <xs:element name="Descricion" type="xs:string"/>
      </xs:sequence>
      <xs:attribute name="num" type="xs:string" use="required"/>
      <xs:attribute name="sesions" type="xs:string" use="required"/>
    </xs:complexType>
  </xs:element>
</xs:schema>
